<body>

    <h1>Organizador de Tareas</h1>
    <div class="task-input">
        <input type="text" id="taskInput" placeholder="Escribe tu tarea aquí">
        <button onclick="addTask()">Agregar Tarea</button>
    </div>
    
    <ul id="taskList" class="task-list"></ul>

    <!-- Enlace a Google Drive -->
    <a href="https://drive.google.com" target="_blank" class="drive-link">Ir a Google Drive</a>

    <script>
        function addTask() {
            // Obtiene el valor de la tarea escrita
            const taskText = document.getElementById('taskInput').value;

            // Verifica que la tarea no esté vacía
            if (taskText === '') {
                alert('Por favor, escribe una tarea.');
                return;
            }

            // Crea un nuevo elemento de tarea
            const taskItem = document.createElement('li');
            taskItem.className = 'task-item';

            // Agrega la casilla de marcado
            const checkbox = document.createElement('input');
            checkbox.type = 'checkbox';
            taskItem.appendChild(checkbox);

            // Agrega el texto de la tarea
            const taskLabel = document.createElement('span');
            taskLabel.textContent = taskText;
            taskItem.appendChild(taskLabel);

            // Agrega la tarea a la lista
            document.getElementById('taskList').appendChild(taskItem);

            // Limpia el campo de entrada de texto
            document.getElementById('taskInput').value = '';
        }
    </script>

